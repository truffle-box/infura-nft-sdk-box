{
  "ts-node": {
    "files": true
  },
  "files": [
    "scripts/mint.ts",
    "scripts/mint.d.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    // "lib": [],
    "baseUrl": "./",
    "sourceRoot": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "types": [
      "./src/global.d.ts"
    ]
  }
}
